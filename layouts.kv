
################################### All Windows #####################################

WindowManager:
    MainWindow:
    NotesWindow:
        NavBar:




#################################### Main Window Layout #############################
<MainWindow>
    name: "main_window"

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "screen 1"
            text: "Date"
            icon: "calendar"

            MDGridLayout:
                cols: 1
                
                canvas.before:
                    Color:
                        rgb: (.18, .18, .18)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                
                
                MDList:
                    ThreeLineListItem:
                        text: "Stronger Together Journal"
                        secondary_text: "Handpicked Bible verses for the year"
                        tertiary_text: "Dedicated journal section for a lifetime of reflection"


                MDScrollView:
                    
                    MDList:
                        
                        TwoLineIconListItem:
                            
                            text: "JAN 1"
                            secondary_text: "Passage: Matt 1-2"
        
                            IconLeftWidget:
                                icon: "arrow-collapse-right"
                                on_release: root.jan1()
                                
                        TwoLineIconListItem:
                            text: "JAN 8"
                            secondary_text: "Passage: Matt 3-4"
                        
                            IconLeftWidget:
                                icon: "arrow-collapse-right"
                                on_release: root.jan8()
                                
                        
                        TwoLineIconListItem:
                            text: "JAN 15"
                            secondary_text: "Passage: Matt 5-6"
                    
                            IconLeftWidget:
                                icon: "arrow-collapse-right"                       
                                on_release: 
                                    root.jan15()


        MDBottomNavigationItem:
            name: "screen 2"
            text: "Reflection"
            icon: "chat-question-outline"


            MDGridLayout:
                cols: 1
                size: root.width, root.height

                canvas.before:
                    Color:
                        rgb: (.18, .18, .18)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDRaisedButton:
                    id: note_button
                    text: "Open Journal"
                    on_release: 
                        app.root.current = "notes_window" 
                        root.manager.transition.direction = "right"
                    
                MDLabel:
                    id: questionBox
                    text: "Reflection Questions"
                    bold: True
                

                    
        MDBottomNavigationItem:
            name: "screen 3"
            text: "About"
            icon: "information-outline"

            MDGridLayout:
                cols: 1
                
                canvas.before:
                    Color:
                        rgb: (.18, .18, .18)
                    Rectangle:
                        pos: self.pos
                        size: self.size

#################################### Notes Window Layout #############################
<NotesWindow>
    name: "notes_window"

    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        canvas.before:
            Color:
            	rgb: (.1608, .1961, .2549)
            Rectangle:
                pos: self.pos
                size: self.size


        MDTopAppBar:
            title: "Stronger Together Journal"
            pos_hint: {'top': 1, 'y': 0}
            left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
            right_action_items: [['keyboard-backspace', lambda x: app.set_screen('main_window')],['file-settings-outline']]
        
        
        ScrollView:
    
    
    
    
    MDNavigationDrawer:
        id: nav_drawer

        orientation: "vertical"
        
        MDList:
        	OneLineListItem:
        		text: "Notes List"
        	
        MDScrollView:
            
            MDList:
                
                OneLineIconListItem:
                	
                	text: "New Note"
  
                    IconLeftWidget:
                        icon: "book-check-outline"
                        on_release: root.add_note()
