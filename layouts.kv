################################### Custom Class Stuff ##############################


################################### All Windows #####################################

WindowManager:
    MainWindow:

#################################### Main Window Layout #############################
<MainWindow>
    name: "main_window"

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "screen 1"
            text: "Date"
            icon: "book-cross"

            MDGridLayout:
                cols: 1
                
                canvas.before:
                    Color:
                        rgb: (.18, .18, .18)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                
                MDTopAppBar:
                    pos_hint: {'top': 1, 'y': 0}
                    Image: 
                        source: "logo_black_logo.png"
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        width: 200
                        height: 75

                MDFloatingActionButton:
                    id: note_button
                    icon: "menu"
                    elevation: 0
                    on_release: 
                        lambda x: nav_drawer.set_state("open")



        MDBottomNavigationItem:
            name: "screen 2"
            text: "About"
            icon: "information-outline"

            MDGridLayout:
                cols: 1
                
                canvas.before:
                    Color:
                        rgb: (.18, .18, .18)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDTopAppBar:
                    pos_hint: {'top': 1, 'y': 0}
                    Image: 
                        source: "logo_black_logo.png"
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        width: 200
                        height: 75
                MDList:
                    OneLineListItem:
                        text: ""


    MDNavigationDrawer:
        id: nav_drawer

        orientation: "vertical"
        
        MDList:
            OneLineListItem:
                text: "Scripture for the year"

        MDScrollView:
            
            MDList:
                
                TwoLineIconListItem:
                    
                    text: "JAN 1"
                    secondary_text: "Passage: Matt 1-2"


                    IconLeftWidget:
                        icon: "web"
                        on_release: root.jan1()
                        
                TwoLineIconListItem:
                    text: "JAN 8"
                    secondary_text: "Passage: Matt 3-4"

                
                    IconLeftWidget:
                        icon: "web"
                        on_release: root.jan8()
                        
                
                TwoLineIconListItem:
                    text: "JAN 15"
                    secondary_text: "Passage: Matt 5-6"

            
                    IconLeftWidget:
                        icon: "web"                   
                        on_release: 
                            root.jan15()