################################### Custom Class Stuff ##############################

################################### All Windows #####################################

WindowManager:
    MainWindow:

#################################### Main Window Layout #############################
<MainWindow>
    name: "main_window"

    MDGridLayout:
        cols: 1
        
        canvas.before:
            Color:
                rgb: (.18, .18, .18)
            Rectangle:
                pos: self.pos
                size: self.size
      
        MDGridLayout:
            cols: 1

            MDTopAppBar:
                id: toolbar
                title: "Journal"
                left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                right_action_items: [["information-variant", lambda x: root.about()]]
                elevation: 10
                md_bg_color: 0, 0, 0, 1
                specific_text_color: 1, 1, 1, 1

            MDTextField:
                id: journal_questions_text
                size_hint_y: 1
                multiline: True
                text_color_focus: 1, 1, 1, 1
                mode: "fill"
                icon_right: "book-edit"
                text: "\n\n\n Please Choose a Date from the Menu"
                on_touch_up: root.save_note()

            
        MDTopAppBar:
            Image: 
                source: "logo_nobg.png"
                allow_stretch: True
                keep_ratio: False
                size_hint: None, None
                width: 200
                height: 70

    MDNavigationDrawer:
        id: nav_drawer

        orientation: "vertical"
        
        MDList:
            OneLineListItem:
                text: "The 2023 Reading Plan"

        MDScrollView:
            
