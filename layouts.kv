################################### Custom Class Stuff ##############################

################################### All Windows #####################################

WindowManager:
    MainWindow:

#################################### Main Window Layout #############################
<MainWindow>
    name: "main_window"

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "screen 1"
            text: "Reflection"
            icon: "chat-question-outline"

            MDGridLayout:
                cols: 1
                
                canvas.before:
                    Color:
                        rgb: (.18, .18, .18)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                
                MDTopAppBar:
                    pos_hint: {'top': 1, 'y': 0}
                    Image: 
                        source: "logo_black_logo.png"
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        width: 200
                        height: 75
                
                TabbedPanel:
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    do_default_tab: False

                    TabbedPanelItem:
                        text: 'Guide'
                        
                        MDGridLayout:
                            cols: 1
                    
                            ScrollView:

                                MDLabel:
                                    id: journal_guide
                                    text: ""
                                    size_hint_y: None
                                    text_size: self.width, None
                                    height: self.texture_size[1]


                            MDFloatingActionButton:
                                id: note_button
                                icon: "book-cross"
                                elevation: 0
                                on_release:
                                    nav_drawer.set_state("open")

                    TabbedPanelItem:
                        text: 'Journal'

                        MDTextField:
                            id: journal_questions_text
                            size_hint_y: 1
                            hint_text: "Question Answers: "
                            multiline: True
                            mode: "fill"
                            icon_right: "book-edit"
                            text: ""



        MDBottomNavigationItem:
            name: "screen 2"
            text: "About"
            icon: "information-outline"

            MDGridLayout:
                cols: 1
                
                canvas.before:
                    Color:
                        rgb: (.18, .18, .18)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDTopAppBar:
                    pos_hint: {'top': 1, 'y': 0}
                    Image: 
                        source: "logo_black_logo.png"
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        width: 200
                        height: 75
                MDList:
                    OneLineListItem:
                        text: ""


    MDNavigationDrawer:
        id: nav_drawer

        orientation: "vertical"
        
        MDList:
            OneLineListItem:
                text: "The 2023 Reading Plan"

        MDScrollView:
            
            MDList:
                
                TwoLineIconListItem:
                    
                    text: "JAN 1"
                    secondary_text: "Passage: Matt 1-2"
                    on_press: root.display_journal("JAN 1", "Matt 1-2")
                    on_release: nav_drawer.set_state("closed")


                    IconLeftWidget:
                        icon: "web"
                        on_release: root.jan1()
                        
                TwoLineIconListItem:
                    text: "JAN 8"
                    secondary_text: "Passage: Matt 3-4"
                    on_press: root.display_journal("JAN 8", "Matt 3-4")
                    on_release: nav_drawer.set_state("closed")

                
                    IconLeftWidget:
                        icon: "web"
                        on_release: root.jan8()
                        
                
                TwoLineIconListItem:
                    text: "JAN 15"
                    secondary_text: "Passage: Matt 5-6"
                    on_press: root.display_journal("JAN 15", "Matt 5-6")
                    on_release: nav_drawer.set_state("closed")

            
                    IconLeftWidget:
                        icon: "web"                   
                        on_release: 
                            root.jan15()